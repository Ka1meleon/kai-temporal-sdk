{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "../../..",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@common/*": ["./src/common/*"],
      "@common": ["./src/common"],
      "@libs/*": ["./src/libs/*"],
      "@libs": ["./src/libs"],
      "@temporal/*": ["./src/temporal/*"],
      "@temporal": ["./src/temporal"],
      "@tools/*": ["./src/tools/*"],
      "@tools": ["./src/tools"],
      "@api-gateway/*": ["./src/api-gateway/*"],
      "@api-gateway": ["./src/api-gateway"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}